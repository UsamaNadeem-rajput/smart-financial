# Production Environment Variables for OrangeHost
# Rename this file to .env and update with your actual values

# Database Configuration (OrangeHost MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=yourusername_dbuser
DB_PASSWORD=your_database_password
DB_NAME=yourusername_smartfinancial

# Session Configuration - CHANGE THIS IN PRODUCTION!
SESSION_SECRET=your_super_secret_session_key_change_this_in_production_12345

# Server Configuration
PORT=8080
NODE_ENV=production

# Frontend URL (Your OrangeHost domain)
FRONTEND_URL=https://yourdomain.com

# Email Configuration (if using contact form)
EMAIL_HOST=mail.yourdomain.com
EMAIL_PORT=587
EMAIL_USER=noreply@yourdomain.com
EMAIL_PASS=your_email_password